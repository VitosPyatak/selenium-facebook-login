{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./build",
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": false,
        "typeRoots": ["./node_modules/@types"],
        "allowUmdGlobalAccess": true,
        "skipLibCheck": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": ["app.ts", "src"],
    "exclude": ["node_modules"]
}
