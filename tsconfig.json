{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "allowJs": true,
        "types": ["node"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*", "app.ts"],
    "exclude": ["node_modules"]
}
